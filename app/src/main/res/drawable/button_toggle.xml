<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#FF6B9D"
                android:endColor="#FF4081"
                android:angle="135" />
            <corners android:radius="28dp" />
            <stroke
                android:width="2dp"
                android:color="#FF8BAD" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FF4081"
                android:endColor="#E91E63"
                android:angle="135" />
            <corners android:radius="28dp" />
            <stroke
                android:width="2dp"
                android:color="#FF6B9D" />
        </shape>
    </item>
</selector>