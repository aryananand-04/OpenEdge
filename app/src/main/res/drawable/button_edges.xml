<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#00FFD1"
                android:endColor="#00CCAA"
                android:angle="135" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#00FFEE" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#00DDBB"
                android:endColor="#00AA88"
                android:angle="135" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#00FFD1" />
        </shape>
    </item>
</selector>